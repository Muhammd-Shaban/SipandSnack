<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">@color/main_yellow</item>
    </style>


    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:searchViewStyle" tools:targetApi="lollipop">@style/AppTheme.Toolbar.SearchView</item>
    </style>


    <style name="AppTheme.Toolbar.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/aqua</item>
        <item name="android:gravity">center_vertical</item>
    </style>




    <style name="HintSize" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12dp</item>
    </style>



    <style name="textBold" parent="TextAppearance.Design.Hint">
        <item name="android:textStyle">bold</item>
    </style>

</resources>