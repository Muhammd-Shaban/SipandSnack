<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="20dp"
    android:background="@color/calmYellow"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information About Add Item"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/matteBlack"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18dp"
        />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="This activity contains the form that prompts manager for required fields of the items. After filling the form, manager can be able to add item to the database.\n\n اس صفحے میں وہ فارم موجود ہے جو اشیاء کے مطلوبہ شعبوں کے لیے مینیجر کو اشارہ کرتا ہے۔ فارم بھرنے کے بعد ، مینیجر ڈیٹا بیس میں آئٹم شامل کر سکتا ہے۔"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16dp"
        android:textAlignment="textStart"
        android:gravity="start" />



    <Button
        android:id="@+id/okBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:fontFamily="@font/biorhyme_bold"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/matteBlack"
        android:background="@drawable/rounded_button_yellow"
        />



</LinearLayout>