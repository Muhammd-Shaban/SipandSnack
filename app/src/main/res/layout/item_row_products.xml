<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineProvider="background"
        android:outlineSpotShadowColor="@color/main_yellow"
        card_view:cardBackgroundColor="@color/calmYellow"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        android:layout_marginBottom="5dp"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:id="@+id/addIconRL"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:id="@+id/addiconItems"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/add"
                android:layout_alignParentRight="true"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/itemIMG"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/logo"
                android:layout_below="@+id/addiconItems"
                app:civ_border_color="@color/matteBlack"
                app:civ_border_width="2dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">


            <TextView
                android:id="@+id/itemIdTVLeft"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Item ID : "
                android:textStyle="bold"
                android:textColor="@color/matteBlack"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/itemIdTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/itemIdTVLeft"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/matteBlack"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/itemNameTVLeft"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemIdTVLeft"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Item Name : "
                android:textStyle="bold"
                android:textColor="@color/matteBlack"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/itemNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemIdTV"
                android:layout_toRightOf="@+id/itemNameTVLeft"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/matteBlack"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/itemPriceTVLeft"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemNameTVLeft"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Item Price : "
                android:textStyle="bold"
                android:textColor="@color/matteBlack"
                android:textSize="14dp" />



            <TextView
                android:id="@+id/itemPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemNameTV"
                android:layout_toRightOf="@+id/itemPriceTVLeft"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/matteBlack"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/itemCategoryTVLeft"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemPriceTVLeft"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Category : "
                android:textStyle="bold"
                android:textColor="@color/matteBlack"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/itemCategoryTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemPriceTVLeft"
                android:layout_toRightOf="@+id/itemCategoryTVLeft"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/matteBlack"
                android:textSize="14dp" />



            <TextView
                android:id="@+id/itemSizeTVLeft"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemCategoryTVLeft"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Size : "
                android:textStyle="bold"
                android:textColor="@color/matteBlack"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/itemSizeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemCategoryTVLeft"
                android:layout_toRightOf="@+id/itemSizeTVLeft"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/matteBlack"
                android:textSize="14dp" />




            <TextView
                android:id="@+id/itemDescriptionTVLeft"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemSizeTVLeft"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Description : "
                android:textStyle="bold"
                android:textColor="@color/matteBlack"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/itemDescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemSizeTVLeft"
                android:layout_toRightOf="@+id/itemDescriptionTVLeft"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/matteBlack"
                android:textSize="14dp" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

