<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="20dp"
    android:background="@color/calmYellow"
    android:orientation="vertical">


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/matteBlack"
        android:text="About Add Categories"
        android:fontFamily="@font/biorhyme_bold"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="start" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/matteBlack"
        android:text="زمرہ شامل کرنے کے بارے میں"
        android:fontFamily="@font/biorhyme_bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="start" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/matteBlack"
        android:text="@string/aboutCategory1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/biorhyme_bold"
        android:textSize="16dp"
        android:layout_gravity="center"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/matteBlack"
        android:text="@string/aboutCategory2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/biorhyme_bold"
        android:textSize="16dp"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/okBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="40dp"
        android:textColor="@color/matteBlack"
        android:background="@drawable/rounded_button_yellow"
        />


</LinearLayout>