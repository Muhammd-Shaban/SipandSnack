<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cust.sipnsnack.Items.MainView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            android:textColor="@color/matteBlack"
            android:textSize="14sp"
            android:fontFamily="@font/biorhyme_bold"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="right"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@color/calmYellow"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Category"
                android:textColor="@color/matteBlack"
                android:textSize="18dp"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/categorySPN"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:prompt="@color/main_yellow"
                android:spinnerMode="dropdown"
                android:visibility="visible" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/items_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:scrollbars="vertical" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="3dp"
            android:background="@color/main_yellow" />

        <Button
            android:id="@+id/customerLogoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/matteBlack"
            android:text="Logout"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:fontFamily="@font/biorhyme_bold"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>