<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="20dp"
    android:background="@color/calmYellow"
    android:orientation="vertical">


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/matteBlack"
        android:text="ABOUT EMAIL VERIFICATION"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="start" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/matteBlack"
        android:text="ای میل کی تصدیق کے بارے میں"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="start" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/matteBlack"
        android:text="This page is to send an verification to your email in order to verify that its really you. Simple open your email and click on verification link sent by the system."
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_gravity="center"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/matteBlack"
        android:text="یہ صفحہ آپ کے ای میل پر ایک تصدیق بھیجنے کے لیے ہے تاکہ اس بات کی تصدیق کی جا سکے کہ یہ واقعی آپ ہی ہیں۔ اپنا ای میل کھولیں اور سسٹم کے ذریعے بھیجے گئے تصدیقی لنک پر کلک کریں۔"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_gravity="center"/>





    <Button
        android:id="@+id/okBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textColor="@color/matteBlack"
        android:background="@drawable/rounded_button_yellow"
        />


</LinearLayout>