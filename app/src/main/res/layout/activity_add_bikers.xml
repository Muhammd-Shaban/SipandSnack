<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cust.sipnsnack.Bikers.AddBikers">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backBTN"
            android:src="@drawable/back_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/backBTN"
            android:padding="20dp">


            <RelativeLayout
                android:id="@+id/mainLayoutBikers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/calmYellow"
                android:padding="10dp">

                <TextView
                    android:id="@+id/engTVBikers"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/biorhyme_bold"
                    android:text="ADD BIKER"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/engTVBikers"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/addBikersUrdu"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/infoiconIVBikers"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="@drawable/blueinfologo" />

                </RelativeLayout>

            </RelativeLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bikersUsername"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:hint="@string/enterBikerUsername"
                android:textColorHint="@color/et_hint"
                app:boxStrokeColor="@color/matteBlack"
                app:hintTextColor="@color/matteBlack"
                app:hintTextAppearance="@style/HintSize">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/biker_UsernameET"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_username"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                    android:maxLength="20">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bikersName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:hint="@string/enterBikerName"
                android:textColorHint="@color/et_hint"
                app:boxStrokeColor="@color/matteBlack"
                app:hintTextColor="@color/matteBlack"
                app:hintTextAppearance="@style/HintSize">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/biker_NameET"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_name"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                    android:maxLength="40">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bikerPassword"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp"
                android:hint="@string/enterBikerPassword"
                android:textColorHint="@color/et_hint"
                app:hintTextColor="@color/matteBlack"
                app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                app:hintTextAppearance="@style/HintSize">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/biker_PasswordET"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_password_focused"
                    android:drawableLeft="@drawable/ic_password_focused"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                    android:maxLength="30">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bikerPhoneNo"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:hint="@string/enterBikerPhoneNo"
                android:textColorHint="@color/et_hint"
                app:hintTextColor="@color/matteBlack"
                app:boxStrokeColor="@color/matteBlack"
                app:hintTextAppearance="@style/HintSize">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/biker_phoneNoET"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_phone"
                    android:maxLength="24">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bikerAddress"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:hint="@string/enterBikerAddress"
                android:textColorHint="@color/et_hint"
                app:boxStrokeColor="@color/matteBlack"
                app:hintTextColor="@color/matteBlack"
                app:hintTextAppearance="@style/HintSize">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/biker_AddressET"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:maxLines="5"
                    android:gravity="start"
                    android:drawablePadding="10dp"
                    android:maxLength="100">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/addBikersButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/main_button_bg"
                android:fontFamily="@font/poppins_semibold"
                android:text="Add / درج کریں"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>


</ScrollView>