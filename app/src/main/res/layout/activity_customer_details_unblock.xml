<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.cust.sipnsnack.ManagerDashboard.CustomerDetailsUnblock">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <TextView
                android:layout_weight="4"
                android:id="@+id/customersDetailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biorhyme_bold"
                android:gravity="left"
                android:text="C01"
                android:textColor="@color/matteBlack"
                android:textSize="18dp" />


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/customersUnBlockIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/productDetailTV"
                    android:background="@drawable/unblock" />


            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/middleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainLayout"
            android:layout_marginTop="40dp">

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/main_yellow" />


            <TextView
                android:id="@+id/usernameLeft"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Username"
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/usernameRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/usernameLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="C001"
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/nameLeft"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Name"
                android:layout_below="@+id/usernameLeft"
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/nameRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/usernameRight"
                android:layout_toRightOf="@+id/nameLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="Qasim"
                android:layout_marginLeft="5dp"
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cancelledOrdersLeft"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameLeft"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Cancelled Orders"
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cancelledOrdersRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameRight"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/cancelledOrdersLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="6"
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/statusLeft"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cancelledOrdersLeft"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Status"
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/statusRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cancelledOrdersRight"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/statusLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="Blocked"
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />




        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/middleLayout"
            android:background="@color/main_yellow" />



        <Button
            android:id="@+id/okCustomersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/main_button_bg"
            android:fontFamily="@font/biorhyme_bold"
            android:text="OK"
            android:textStyle="bold"
            android:layout_below="@+id/view2"
            android:textColor="@color/matteBlack"
            android:textSize="18sp" />


    </RelativeLayout>

</ScrollView>