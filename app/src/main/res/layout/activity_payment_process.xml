<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cust.sipnsnack.Customers.PaymentProcess">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backBTN"
            android:src="@drawable/back_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/mainTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/payment"
            android:textColor="@color/matteBlack"
            android:textSize="20sp"
            android:fontFamily="@font/biorhyme_bold"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>

        <View
            android:layout_width="320dp"
            android:layout_height="3dp"
            android:layout_marginBottom="10dp"
            android:background="@color/matteBlack" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/LL1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Select your Payment Type : "
            android:textSize="14sp"
            android:fontFamily="@font/biorhyme_bold"
            android:textColor="@color/matteBlack"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/cashOnDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:text="Cash on Delivery"
                android:padding="5dp"
                android:buttonTint="#FF03C04a"
                android:textColor="@color/matteBlack"
                android:textSize="20sp"
                android:fontFamily="@font/biorhyme_bold" />

            <RadioButton
                android:id="@+id/onlinePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Online Payment"
                android:checked="false"
                android:padding="5dp"
                android:buttonTint="#FF03C04a"
                android:textColor="@color/matteBlack"
                android:textSize="20sp"
                android:fontFamily="@font/biorhyme_bold" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:text="Next >"
        android:padding="6dp"
        android:textSize="16sp"
        android:textColor="@color/matteBlack"
        android:fontFamily="@font/biorhyme_bold"
        android:layout_below="@+id/LL2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"/>

</RelativeLayout>