<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.cust.sipnsnack.Bikers.BikersDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backBTN"
            android:src="@drawable/back_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:padding="10dp"
            android:id="@+id/mainLayout"
            android:layout_below="@+id/backBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <TextView
                android:layout_weight="4"
                android:id="@+id/bikersDetailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biorhyme_bold"
                android:gravity="left"
                android:text="Biker 1"
                android:textColor="@color/matteBlack"
                android:textSize="24sp" />


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/bikersDetailEditIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/bikersDetailTV"
                    android:background="@drawable/ic_edit" />


                <ImageView
                    android:id="@+id/bikersDetailDeleteIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/bikersDetailEditIV"
                    android:background="@drawable/ic_delete" />


            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/middleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainLayout"
            android:layout_marginTop="40dp">

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/darkPurple" />


            <TextView
                android:id="@+id/usernameLeft"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Username"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/usernameRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/usernameLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="biker1"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/nameLeft"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Name"
                android:layout_below="@+id/usernameLeft"
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/nameRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/usernameRight"
                android:layout_toRightOf="@+id/usernameLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="Ali Khan"
                android:layout_marginLeft="5dp"
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/phoneNoLeft"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameLeft"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Phone No"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/phoneNoRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameRight"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/phoneNoLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="0312-3456789"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/addressLeft"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneNoLeft"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Address"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/addressRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneNoRight"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/phoneNoLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="House 1, St2, ABC, XYZ."
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />

        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/middleLayout"
            android:background="@color/darkPurple" />



        <LinearLayout
            android:id="@+id/LL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/starsCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="..."
                android:fontFamily="@font/poppins_semibold"
                android:textSize="42sp"
                android:textColor="@color/matteBlack"/>

            <TextView
                android:id="@+id/remarksTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="..."
                android:fontFamily="@font/biorhyme_bold"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"
                android:textColor="@color/matteBlack"/>

        </LinearLayout>


        <RatingBar
            android:id="@+id/starsRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL1"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/starsRating"
            android:background="@color/darkPurple" />


        <Button
            android:id="@+id/okBikersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/main_button_bg"
            android:fontFamily="@font/biorhyme_bold"
            android:text="OK"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/view3"
            android:textColor="@color/matteBlack"
            android:textSize="18sp" />


    </RelativeLayout>

</ScrollView>