<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="20dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/middleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainLayout"
        android:layout_marginTop="40dp">

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/main_yellow" />


        <TextView
            android:id="@+id/usernameLeft"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/biorhyme_bold"
            android:text="Username"
            android:textColor="@color/matteBlack"
            android:textSize="16dp"

            />

        <TextView
            android:id="@+id/usernameRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/usernameLeft"
            android:fontFamily="@font/biorhyme_regular"
            android:text="Manager1"
            android:textColor="@color/matteBlack"
            android:textSize="16dp"

            />

        <TextView
            android:id="@+id/nameLeft"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/biorhyme_bold"
            android:text="Name"
            android:layout_below="@+id/usernameLeft"
            android:textColor="@color/matteBlack"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/nameRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usernameRight"
            android:layout_toRightOf="@+id/usernameLeft"
            android:fontFamily="@font/biorhyme_regular"
            android:text="Ali Khan"
            android:layout_marginLeft="5dp"
            android:textColor="@color/matteBlack"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/phoneNoLeft"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameLeft"
            android:fontFamily="@font/biorhyme_bold"
            android:text="Phone No"
            android:textColor="@color/matteBlack"
            android:textSize="16dp"

            />

        <TextView
            android:id="@+id/phoneNoRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameRight"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/phoneNoLeft"
            android:fontFamily="@font/biorhyme_regular"
            android:text="0312-3456789"
            android:textColor="@color/matteBlack"
            android:textSize="16dp"

            />

        <TextView
            android:id="@+id/emailLeft"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNoLeft"
            android:fontFamily="@font/biorhyme_bold"
            android:text="Email"
            android:textColor="@color/matteBlack"
            android:textSize="16dp"

            />

        <TextView
            android:id="@+id/addressRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneNoRight"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/emailLeft"
            android:fontFamily="@font/biorhyme_regular"
            android:text="admin@1.com"
            android:textColor="@color/matteBlack"
            android:textSize="16dp" />

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/middleLayout"
        android:background="@color/main_yellow" />



    <Button
        android:id="@+id/okProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/main_button_bg"
        android:fontFamily="@font/biorhyme_bold"
        android:text="OK"
        android:textStyle="bold"
        android:layout_below="@+id/view2"
        android:textColor="@color/matteBlack"
        android:textSize="18sp" />






</LinearLayout>