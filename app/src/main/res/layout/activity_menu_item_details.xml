<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cust.sipnsnack.Customers.MenuItemDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/LL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/backBTN"
                    android:src="@drawable/back_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/details"
                    android:textColor="@color/matteBlack"
                    android:textSize="28sp"
                    android:fontFamily="@font/biorhyme_bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"/>

                <View
                    android:layout_width="240dp"
                    android:layout_height="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/main_yellow" />

            </LinearLayout>

            <TextView
                android:id="@+id/itemNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHILLED DRINKS"
                android:textColor="@color/matteBlack"
                android:textSize="20sp"
                android:layout_below="@id/LL1"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/biorhyme_bold"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:id="@+id/priceLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemNameTV"
                android:layout_centerInParent="true"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. "
                    android:textColor="@color/matteBlack"
                    android:textSize="16sp"
                    android:fontFamily="@font/biorhyme_regular" />

                <TextView
                    android:id="@+id/itemPriceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textColor="@color/matteBlack"
                    android:textSize="16sp"
                    android:fontFamily="@font/biorhyme_regular" />

            </LinearLayout>


            <ImageView
                android:id="@+id/itemImgIV"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/priceLL"
                android:padding="15dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/LL2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/itemImgIV"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/minusItemBTN"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/dark_red"
                    android:textColor="@color/lavender"
                    android:fontFamily="@font/biorhyme_bold" />

                <TextView
                    android:id="@+id/qtyTV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/calmYellow"
                    android:text="1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"/>


                <Button
                    android:id="@+id/plusItemBTN"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/dark_green"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/lavender"
                    android:fontFamily="@font/biorhyme_bold" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/LL3"
                android:layout_below="@+id/LL2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: "
                    android:textColor="@color/matteBlack"
                    android:textSize="18sp"
                    android:fontFamily="@font/biorhyme_bold" />


                <TextView
                    android:id="@+id/itemTotalPriceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300 Rs."
                    android:textColor="@color/matteBlack"
                    android:textSize="18sp"
                    android:fontFamily="@font/biorhyme_regular" />

            </LinearLayout>



            <TextView
                android:id="@+id/itemDescriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABCDEFGHIJKL"
                android:textColor="@color/matteBlack"
                android:textSize="18sp"
                android:layout_below="@id/LL3"
                android:fontFamily="@font/poppins_semibold"
                android:layout_margin="8dp" />


            <Button
                android:id="@+id/addToCartBTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemDescriptionTV"
                android:background="@drawable/main_button_bg"
                android:layout_marginLeft="40dp"
                android:text="Add to Cart"
                android:textColor="@color/matteBlack"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="35dp"
                android:fontFamily="@font/biorhyme_bold"
                android:layout_marginRight="40dp"/>

        </RelativeLayout>


    </ScrollView>

</LinearLayout>