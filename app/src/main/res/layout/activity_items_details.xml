<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.cust.sipnsnack.Items.ItemsDetails">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/backBTN"
            android:src="@drawable/back_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"/>


        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backBTN"
            android:layout_marginTop="20dp">


            <TextView
                android:layout_weight="4"
                android:id="@+id/itemsDetailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biorhyme_bold"
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:text="Item 1"
                android:textColor="@color/matteBlack"
                android:textSize="18dp" />


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/itemsDetailEditIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/productDetailTV"
                    android:background="@drawable/ic_edit" />


                <ImageView
                    android:id="@+id/itemsDetailDeleteIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/itemsDetailEditIV"
                    android:background="@drawable/ic_delete" />


            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/middleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainLayout"
            android:layout_marginTop="40dp">

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/main_yellow" />


            <TextView
                android:id="@+id/idLeft"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/biorhyme_bold"
                android:text="ID"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/idRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/idLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="Item 1"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/nameLeft"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Name"
                android:layout_below="@+id/idLeft"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/nameRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idRight"
                android:layout_toRightOf="@+id/nameLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="French Fries"
                android:layout_marginLeft="5dp"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/priceLeft"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameLeft"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Price"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/priceRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameRight"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/priceLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="150"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/categoryLeft"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/priceLeft"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Category"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/categoryRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/priceRight"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/categoryLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="Fries"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/sizeLeft"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoryRight"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Size"
                android:textColor="@color/matteBlack"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/sizeRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/categoryRight"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/sizeLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="Medium"
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/descriptionLeft"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sizeLeft"
                android:fontFamily="@font/biorhyme_bold"
                android:text="Description"
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/descriptionRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sizeRight"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/descriptionLeft"
                android:fontFamily="@font/biorhyme_regular"
                android:text="Tasteful and Joyful Fries along with greate sausages."
                android:textColor="@color/matteBlack"
                android:textSize="16dp" />


        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/middleLayout"
            android:background="@color/main_yellow" />


        <ImageView
            android:id="@+id/itemImg"
            android:layout_width="230dp"
            android:layout_height="210dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo"
            android:layout_below="@+id/view2"/>


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/itemImg"
            android:background="@color/main_yellow" />



        <Button
            android:id="@+id/okItemsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/main_button_bg"
            android:fontFamily="@font/biorhyme_bold"
            android:text="OK"
            android:textStyle="bold"
            android:layout_below="@+id/view3"
            android:textColor="@color/matteBlack"
            android:textSize="18sp" />


    </RelativeLayout>

</ScrollView>